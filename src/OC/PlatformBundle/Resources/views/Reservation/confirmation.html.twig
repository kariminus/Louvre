{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
    Confirmation - {{ parent() }}
{% endblock %}

{% block h1 %}
    <h1 class="text-center"> {{ 'title.confirmation'|trans }} </h1>
{% endblock %}

{% block ocplatform_body %}
    <div class="col-md-3"></div>
    <div class="col-md-6">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{{ 'firstName'|trans }}</th>
                            <th>{{ 'lastName'|trans }}</th>
                            <th>{{ 'ticket.price'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for visitor in visitors %}
                        <tr>
                            <td>{{ visitor.firstName }}</td>
                            <td>{{ visitor.lastName }}</td>
                            <td>{{ visitor.ticketPrice }} €</td>
                        </tr>
                        {% endfor %}
                        <tr>
                            <td></td>
                            <td><strong>{{ 'total'|trans }}</strong></td>
                            <td><strong>{{ price }} €</strong></td>
                        </tr>
                        </tbody>
                    </table>
                </div>

        <div class="text-center">
            <a href="{{ path('oc_platform_index') }}" class="btn btn-default">{{ 'bouton.home'|trans }}</a>
        </div>
    </div>
{% endblock %}