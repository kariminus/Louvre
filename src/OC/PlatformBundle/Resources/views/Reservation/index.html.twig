{% block ocplatform_body %}
<div class="container text-center">
    <div class="row">
        <div class="col-md-2 ticket">
            <p>Tarif normal</p>
            <p class="description">A partir de 16 ans</p>
            <p class="price">16 €</p>
        </div>
        <div class="col-md-2 ticket">
